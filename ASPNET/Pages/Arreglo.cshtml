@page
@model ArregloModel
@{
    ViewData["Title"] = "Análisis de Arreglo Aleatorio";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h2 class="h4 mb-0">Análisis de Arreglo Aleatorio</h2>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-4">
                        <h3 class="h5 text-primary">Arreglo Original:</h3>
                        <div class="p-3 bg-light rounded">
                            <code>[@string.Join(", ", Model.ArregloOriginal)]</code>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-4">
                        <h3 class="h5 text-primary">Arreglo Ordenado:</h3>
                        <div class="p-3 bg-light rounded">
                            <code>[@string.Join(", ", Model.ArregloOrdenado)]</code>
                        </div>
                    </div>
                </div>
            </div>

            <h3 class="h4 text-primary mb-3">Resultados Estadísticos</h3>
            <div class="table-responsive">
                <table class="table table-hover table-bordered">
                    <tbody>
                        <tr>
                            <th scope="row" class="w-25">Suma</th>
                            <td>@Model.Suma</td>
                        </tr>
                        <tr>
                            <th scope="row">Promedio</th>
                            <td>@Model.Promedio.ToString("F2")</td>
                        </tr>
                        <tr>
                            <th scope="row">Moda</th>
                            <td>@string.Join(", ", Model.Moda)</td>
                        </tr>
                        <tr>
                            <th scope="row">Mediana</th>
                            <td>@Model.Mediana</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>