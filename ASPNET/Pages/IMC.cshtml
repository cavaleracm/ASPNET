@page
@model IMCModel
@{
    ViewData["Title"] = "Calculadora de IMC";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-warning text-dark">
            <h2 class="h4 mb-0">Calculadora de Índice de Masa Corporal (IMC)</h2>
        </div>

        <div class="card-body">
            <form method="post" class="needs-validation" novalidate>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Peso" class="form-label">Peso (kg)</label>
                        <div class="input-group">
                            <input asp-for="Peso" type="number" step="0.01" class="form-control" required />
                            <span class="input-group-text">kg</span>
                            <div class="invalid-feedback">Por favor ingrese un peso válido</div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Altura" class="form-label">Altura (m)</label>
                        <div class="input-group">
                            <input asp-for="Altura" type="number" step="0.01" class="form-control" required />
                            <span class="input-group-text">m</span>
                            <div class="invalid-feedback">Por favor ingrese una altura válida</div>
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-warning btn-lg">
                        <i class="bi bi-speedometer2"></i> Calcular IMC
                    </button>
                </div>
            </form>

            @if (Model.IMC > 0)
            {
                <div class="mt-4">
                    <h3 class="h5 text-warning">Resultado</h3>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="card bg-light mb-3">
                                <div class="card-body">
                                    <h4 class="h6 card-title">Tu IMC</h4>
                                    <p class="display-6 fw-bold">@Model.IMC.ToString("0.00")</p>
                                    <p class="card-text">
                                        <span class="badge bg-@(Model.IMC < 18.5 ? "info" : Model.IMC < 25 ? "success" : Model.IMC < 30 ? "warning" : "danger")">
                                            @Model.Clasificacion
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body text-center">
                                    <img src="~/images/@Model.ImagenRecomendacion" alt="@Model.Clasificacion" class="img-fluid rounded" style="max-height: 200px;" />
                                    <p class="mt-2 small text-muted">Recomendación para tu IMC</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>