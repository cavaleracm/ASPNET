@page
@model IMCModel
@{
    ViewData["Title"] = "Calculadora de IMC";
}

<h2>Calculadora de Índice de Masa Corporal (IMC)</h2>

<form method="post">
    <div>
        <label>Peso (kg):</label>
        <input asp-for="Peso" type="number" step="0.01" required />
    </div>
    <div>
        <label>Altura (m):</label>
        <input asp-for="Altura" type="number" step="0.01" required />
    </div>
    <button type="submit">Calcular IMC</button>
</form>

@if (Model.IMC > 0)
{
    <h3>Resultado</h3>
    <p><strong>IMC:</strong> @Model.IMC.ToString("0.00")</p>
    <p><strong>Clasificación:</strong> @Model.Clasificacion</p>
    <img src="~/images/@Model.ImagenRecomendacion" alt="@Model.Clasificacion" width="300" />
}
